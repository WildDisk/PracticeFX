<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="548.0" prefWidth="791.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.wilddisk.practicefx.controller.ChartController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button mnemonicParsing="false" onAction="#addSerias" text="Add serias" />
         <Button mnemonicParsing="false" onAction="#addPoint" text="Add point" />
      </children>
   </HBox>
    <TreeTableView fx:id="treeTableView" onMouseClicked="#onTouch" prefHeight="428.0" prefWidth="751.0">
        <columns>
            <TreeTableColumn fx:id="point" prefWidth="75.0" text="Point" />
            <TreeTableColumn fx:id="pointValue" prefWidth="75.0" text="Value" />
        </columns>
    </TreeTableView>
    <VBox prefHeight="200.0" prefWidth="100.0">
        <children>
            <HBox prefHeight="31.0" prefWidth="751.0">
                <children>
                    <Label prefHeight="24.0" prefWidth="73.0" text="Point name: " />
                    <TextField fx:id="txtPointName" prefHeight="25.0" prefWidth="205.0" />
                </children>
            </HBox>
            <HBox prefHeight="110.0" prefWidth="751.0">
                <children>
                    <Label prefHeight="17.0" prefWidth="74.0" text="Point value: " />
                    <TextField fx:id="txtPointValue" prefHeight="25.0" prefWidth="204.0" />
                </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#apply" text="Apply" />
        </children>
    </VBox>
    <Button onAction="#buildChart" text="Build" />
    <Label fx:id="lbl" text="Label" />
</VBox>
